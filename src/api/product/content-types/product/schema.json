{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "weight": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "barcode": {
      "type": "string",
      "unique": true
    },
    "hero_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "image_assets": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "videos"
      ]
    },
    "sku": {
      "type": "string",
      "maxLength": 18,
      "required": true,
      "minLength": 6
    }
  }
}
